@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container d-flex justify-content-center mt-5">
    <div class="col-lg-4 col-md-6 col-sm-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="text-center mb-4">Log in</h2>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="student@zuyd.nl" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="wachtwoord" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label" asp-for="Input.RememberMe">Onthoud mij</label>
                    </div>
                    <button id="login-submit" type="submit" class="btn w-100" style="background-color: #5ac6aa; color: white;">Log in</button>
                    <div class="mt-3 text-center">
                        <a id="forgot-password" asp-page="./ForgotPassword">Wachtwoord vergeten?</a>
                    </div>
                    <div class="mt-2 text-center">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Account aanvragen</a>
                    </div>
                    <div class="mt-2 text-center">
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Bevestigingsmail opnieuw versturen</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
