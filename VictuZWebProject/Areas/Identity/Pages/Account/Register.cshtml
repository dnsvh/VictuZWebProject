@page
@model RegisterModel
@{
    ViewData["Title"] = "Registreer";
}

<div class="container d-flex justify-content-center mt-5">
    <div class="col-lg-4 col-md-6 col-sm-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="text-center mb-4">Activiteiten bijwonen? Vraag nu een account aan!</h2>
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.FirstName" class="form-control" placeholder="Voornaam" />
                        <label asp-for="Input.FirstName">Voornaam</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.LastName" class="form-control" placeholder="Achternaam" />
                        <label asp-for="Input.LastName">Achternaam</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="naam@voorbeeld.nl" />
                        <label asp-for="Input.Email">Zuyd E-mail</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Wachtwoord" />
                        <label asp-for="Input.Password">Wachtwoord</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Bevestig wachtwoord" />
                        <label asp-for="Input.ConfirmPassword">Bevestig wachtwoord</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button id="registerSubmit" type="submit" class="btn w-100" style="background-color: #5ac6aa; color: white;">Account aanvragen</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

