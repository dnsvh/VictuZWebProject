@model VictuZWebProject.Models.Store

@{
    ViewData["Title"] = "Edit";
    var categoryList = ViewBag.CategoryList as List<SelectListItem>;
}

<div class="container d-flex justify-content-center mt-5">
    <div class="col-lg-6 col-md-8 col-sm-10">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="text-center mb-4">Bewerk Winkel</h2>
                <hr />
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control" placeholder="Store Name" />
                        <label asp-for="Name">Naam</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Description" class="form-control" placeholder="Store Description" />
                        <label asp-for="Description">Beschrijving</label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Size" class="form-control" placeholder="Store Size" />
                        <label asp-for="Size">Grootte</label>
                        <span asp-validation-for="Size" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Price" class="form-control" placeholder="Price" />
                        <label asp-for="Price">Prijs</label>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="ImageUrl" class="form-control" placeholder="Image URL" />
                        <label asp-for="ImageUrl">Afbeeldings-URL</label>
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <select asp-for="Category" asp-items="categoryList" class="form-control">
                            <option value="">-- Selecteer Categorie --</option>
                        </select>
                        <label asp-for="Category">Categorie</label>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Stock" class="form-control" placeholder="Stock" />
                        <label asp-for="Stock">Voorraad</label>
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>

                    <div class="form-check">
                        <input asp-for="MemberPlusProduct" type="checkbox" id="MemberPlusProductCheckbox" class="form-check-input" />
                        <label asp-for="MemberPlusProduct" class="form-check-label">MemberPlusProduct</label>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-primary w-45">Opslaan</button>
                        <a asp-action="Index" class="btn btn-secondary w-45">Annuleer</a>
                    </div>

                    
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Verwijs naar de checkboxes en velden
            const memberPlusProductCheckbox = document.getElementById("MemberPlusProductCheckbox");

            // Functie om de zichtbaarheid van velden te wisselen op basis van de checkbox-status
            function toggleFields() {
                console.log("ToggleFields called"); // Voor debuggen
                console.log("OnlyMembers checked:", memberPlusProductCheckbox.checked);

            }

            // Initialiseer zichtbaarheid van velden bij pagina laden
            toggleFields();

            // Event listeners voor verandering van de checkboxes
            memberPlusProductCheckbox.addEventListener("change", toggleFields);
        });
    </script>
}
