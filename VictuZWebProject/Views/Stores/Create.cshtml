@model VictuZWebProject.Models.Store

@{
    ViewData["Title"] = "Create";
    var categoryList = ViewBag.CategoryList as List<SelectListItem>;
}

<div class="container d-flex justify-content-center mt-5">
    <div class="col-lg-6 col-md-8 col-sm-10">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="text-center mb-4">Maak product</h2>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control" placeholder="Store Name" />
                        <label asp-for="Name">Naam</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Description" class="form-control" placeholder="Store Description" />
                        <label asp-for="Description">Beschrijving</label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Size" class="form-control" placeholder="Store Size" />
                        <label asp-for="Size">Grootte</label>
                        <span asp-validation-for="Size" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Price" class="form-control" placeholder="Price" />
                        <label asp-for="Price">Prijs</label>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="ImageUrl" class="form-control" placeholder="Image URL" />
                        <label asp-for="ImageUrl">Afbeeldings-URL</label>
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <select asp-for="Category" asp-items="categoryList" class="form-control">
                            <option value="">-- Selecteer Categorie --</option>
                        </select>
                        <label asp-for="Category">Categorie</label>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Stock" class="form-control" placeholder="Stock" />
                        <label asp-for="Stock">Voorraad</label>
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn w-100" style="background-color: #5ac6aa; color: white;">Maak product</button>
                    <a asp-action="Index" class="btn btn-secondary w-100 mt-2">Annuleer</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
