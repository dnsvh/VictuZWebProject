@model IEnumerable<VictuZWebProject.Models.ActivityViewModel>

<h1>Upcoming Activities</h1>

<div class="container mt-4">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4 d-flex">
                <div class="card h-100 shadow-sm" style="width: 100%;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Activity.Name)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Activity.Body)</p>
                        <div class="d-flex justify-content-between mb-3">
                            <small class="text-muted">Location: @Html.DisplayFor(modelItem => item.Activity.Location)</small>
                            <small class="text-muted">@Html.DisplayFor(modelItem => item.Activity.Registered) / @Html.DisplayFor(modelItem => item.Activity.MaxCapacity)</small>
                        </div>
                        <div class="d-flex justify-content-between">
                            <small class="text-muted">Due: @item.Activity.DateDue.ToString("MMMM dd, h:mm tt")</small>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-top-0 mt-auto">
                        <div class="d-flex justify-content-end">
                            <a asp-action="Details" asp-route-id="@item.Activity.ActivityId" class="btn btn-primary me-2">Details</a>
                            @if (item.IsUserRegistered)
                            {
                                <form asp-action="Delete" asp-route-id="@item.Activity.ActivityId" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger">Delete Registration</button>
                                </form>
                            }
                            else if (item.Activity.Registered >= item.Activity.MaxCapacity)
                            {
                                <a class="btn btn-secondary disabled" aria-disabled="true">Full</a>
                            }
                            else if (!User.Identity.IsAuthenticated)
                            {
                                <a class="btn btn-secondary disabled" aria-disabled="true">Login to Register</a>
                            }
                            else
                            {
                                <a asp-action="Register" asp-route-id="@item.Activity.ActivityId" class="btn btn-primary">Register</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

