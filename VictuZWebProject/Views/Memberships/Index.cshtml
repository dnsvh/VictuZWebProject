@model IEnumerable<VictuZWebProject.Models.Memberships>

@{
    ViewData["Title"] = "Index";
}
<section class="container py-5">
    <div class="text-center mb-5">
        <h2>Word lid van VictuZ!</h2>
        <p class="text-muted">Bekijk hier de voordelen</p>
    </div>

    <div class="row justify-content-center">
        <!-- Basic Plan (VictuZ Gast) -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header text-center text-white" style="background-color: #808080">
                    <h4>VictuZ Gast</h4>
                </div>
                <div class="card-body text-center d-flex flex-column">
                    <h2 class="card-title">Gratis</h2>
                    <p class="text-muted">voor Zuyd ICT studenten</p>
                    <div class="d-flex justify-content-center">
                        <ul class="list-unstyled my-4 text-start">
                            <li>✓ VictuZ Activiteiten bijwonen</li>
                            <li>✓ Suggesties maken</li>
                            <li style="color: #b0b0b0; font-style: italic;">✘ Exclusieve merchandise</li>
                            <li style="color: #b0b0b0; font-style: italic;">✘ Eerder toegang tot VictuZ Activiteiten</li>
                            <li style="color: #b0b0b0; font-style: italic;">✘ Toegang tot exclusieve VictuZ Activiteiten</li>

                        </ul>
                    </div>
                    <!-- Button to assign Visitor role -->
                    <form method="post" asp-action="AssignVisitorRole" asp-controller="Memberships">
                        <button type="submit" class="btn mt-auto" style="background-color: #808080; color: white;">
                            Kies lidmaatschap
                        </button>
                    </form>

                </div>
            </div>
        </div>

        <!-- Paid Plan (VictuZ+ Lidmaatschap) -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header text-center text-white" style="background-color: #20c997">
                    <h4>VictuZ+ Lidmaatschap</h4>
                </div>
                <div class="card-body text-center d-flex flex-column">
                    <h2 class="card-title">€ 19.99</h2>
                    <p class="text-muted">per jaar</p>
                    <div class="d-flex justify-content-center">
                        <ul class="list-unstyled my-4 text-start">
                            <li>✓ VictuZ Activiteiten bijwonen</li>
                            <li>✓ Suggesties maken</li>
                            <li>✓ Exclusieve merchandise</li>
                            <li>✓ Eerder toegang tot VictuZ Activiteiten</li>
                            <li>✓ Toegang tot exclusieve VictuZ Activiteiten</li>
                        </ul>
                    </div>
                    <form method="post" asp-action="AssignMemberRole" asp-controller="Memberships">
                        <button type="submit" class="btn mt-auto" style="background-color: #20c997; color: white;">
                            Kies lidmaatschap
                        </button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>





