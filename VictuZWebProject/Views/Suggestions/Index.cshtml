@model IEnumerable<VictuZWebProject.Models.SuggestionViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="d-flex justify-content-center">Suggestions</h1>
<h5 class="d-flex justify-content-center">Login and like a suggestion or create a new suggestion if you have a cool idea!</h5>
</div>
<p class="d-flex justify-content-center">
    <a asp-action="Create" class="btn" style="background-color: #20c997; color: white;">Suggest Something</a>
</p>

<div class="container mt-4">
    <div class="row">
        @foreach (var item in Model)
        {

            <div class="col-md-4 mb-4 d-flex">
                <div class="card h-100 shadow-sm" style="width: 100%;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Suggestion.Title)</h5>
                        <small class="card-subtitle">Suggested by @Html.DisplayFor(modelItem => item.Suggestion.Author)</small>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Suggestion.Body)</p>
                        <small></small>
                    </div>
                    <div class="card-footer bg-white border-top-0 mt-auto d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a asp-action="Like" asp-route-id="@item.Suggestion.Id" class="btn me-2">
                                    @if (item.HasUserLiked)
                                    {
                                        <i class="fa-solid fa-heart" style="color:red"></i>
                                    }
                                    else
                                    {
                                        <i class="fa-solid fa-heart"></i>
                                    }
                                </a>
                            }
                            else
                            {
                                <a href="#" class="btn me-2" onclick="showLoginAlert(event)">
                                    <i class="fa-solid fa-heart"></i>
                                </a>
                            }
                            <span class="like-count">@item.Suggestion.Likes</span>
                        </div>
                        <div class="ms-auto">
                            <a asp-action="Details" asp-route-id="@item.Suggestion.Id" class="btn me-2" style="background-color: #20c997; color: white;">Details</a>

                            @* Check if the current user is the author of the suggestion *@
                            @if (User.Identity.Name == item.Suggestion.Author)
                            {
                                <a asp-action="Edit" asp-route-id="@item.Suggestion.Id" class="btn me-2" style="background-color: #20c997; color: white;">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Suggestion.Id" class="btn me-2" style="background-color: #20c997; color: white;">Delete</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
    function showLoginAlert(event) {
        event.preventDefault(); // Prevent any default action
        alert('Please log in to like this suggestion.'); // Show the alert message
    }
</script>

<script src="https://kit.fontawesome.com/8073668e9d.js" crossorigin="anonymous"></script>