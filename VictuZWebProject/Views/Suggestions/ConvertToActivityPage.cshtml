@model CreateActivityViewModel

<h2>Convert Suggestion to Activity</h2>

<form asp-action="ConvertToActivity" method="post">
    <input type="hidden" asp-for="SuggestionId" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" required/>
    </div>

    <div class="form-group">
        <label asp-for="Body"></label>
        <textarea asp-for="Body" class="form-control" required></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="MaxCapacity"></label>
        <input asp-for="MaxCapacity" type="number" class="form-control" required min="1" />
    </div>

    <div class="form-group">
        <label asp-for="DateDue" class="control-label"></label>
        <input asp-for="DateDue" class="form-control" />
        <span asp-validation-for="DateDue" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Activity</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
